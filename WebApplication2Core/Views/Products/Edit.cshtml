@model ProductUpdateViewModel

@{
    ViewData["Title"] = "Edit";
    var Path = "~/images/" + (Model.ExistingPhotoPath ?? "noimage.jpg");
}

<h1>Edit</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="Edit">
            <input hidden asp-for="Id" />
            <input hidden asp-for="ExistingPhotoPath " />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Photopath" class="control-label"></label>
                <div class=" custom-file">
                    <input asp-for="Photopath" class="form-control custom-file-input" />
                    <label class="custom-file-label">Click Here To Change Photo...</label>
                </div>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" />
                    @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>

</div>
<div class="row ">
    <img class="card-img-top image-Thems " src="@Path" asp-append-version="true" />
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            $('.custom-file-label').change(function () {
                var fileName = $(this).val().splice("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            });
        });
    </script>
}
